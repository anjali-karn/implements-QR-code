<div id="<%= dom_id @post %>">
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @post.body %>
  </p>

  <% if @post.qrcode.attached? %>
    <p>
      <strong>QR Code:</strong>
      <%= image_tag(url_for(@post.qrcode)) %>
    </p>
  <% end %>
</div>
